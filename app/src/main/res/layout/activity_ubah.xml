<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UbahActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah perpustakaan"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="10pt"
            />


        <TextView
            android:textSize="8pt"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

        <EditText
            android:id="@+id/et_nama"
            android:padding="25dp"
            android:hint="Masukan Nama..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="8pt"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"/>

        <EditText
            android:id="@+id/et_alamat"
            android:padding="25dp"
            android:hint="Masukan Alamat..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="8pt"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link foto"/>

        <EditText
            android:id="@+id/et_foto"
            android:padding="25dp"
            android:hint="Masukan Link Foto..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textSize="8pt"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi maps"/>
        <EditText
            android:id="@+id/et_koordinat"
            android:padding="25dp"
            android:hint="Masukan Lokasi..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="8pt"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang"/>
        <EditText
            android:id="@+id/et_tentang"
            android:padding="25dp"
            android:hint="Masukan Tentang..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

        <Button
            android:id="@+id/bt_ubah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah"
            android:textColor="@color/black"
            android:backgroundTint="#00E59F"
            />
    </LinearLayout>
</ScrollView>